{
  "name": "inventario-tienda",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ./main.js",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.5",
    "dotenv": "^16.4.5",
    "nodemailer": "^6.9.15",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.tuempresa.tuapp",
    "productName": "Mi App Electron",
    "files": [
      "main.js",
      "database.js",
      "renderer.js",
      "package.json",
      "app/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "app/data/database.db",
        "to": "app/data/database.db"
      }
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
